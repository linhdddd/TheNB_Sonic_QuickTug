<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/iv_reward"
                android:layout_width="60dp"
                android:layout_height="60dp"
                
                 />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                
                android:id="@+id/tv_reward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is list item !"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_reward_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_reward_title"
                android:text="This is list item !"
                android:textColor="@color/text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="@color/red"
                android:gravity="right"
                android:id="@+id/tv_reward_point"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="This is list item !"
                android:textSize="20sp" />

            <TextView
                android:gravity="right"
                android:id="@+id/tv_reward_credit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/tv_reward_point"
                android:textSize="8sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/vline" />

</LinearLayout>