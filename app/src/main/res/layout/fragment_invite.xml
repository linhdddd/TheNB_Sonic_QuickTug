<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relLayout_login_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite1" />

        <TextView
            android:id="@+id/tv_invite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_invite"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/invite2" />

        <TextView
            android:id="@+id/tv_my_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_invite"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/tv_invite1"
            android:text="  Loading..." />
        
         <TextView
            android:id="@+id/tv_invite_after_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_invite1"
            android:text="" />

        <EditText
            android:id="@+id/ed_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_invite_after_input"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textview_background"
            android:hint="Enter your friend's Invite Code"
            android:padding="8dp" 
            android:inputType="numberSigned"/>

        <Button
            android:id="@+id/bt_Invite"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_invite"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>